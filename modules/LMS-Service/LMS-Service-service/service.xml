<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_2_0.dtd">

<service-builder dependency-injector="ds" package-path="com.lms">
	<namespace>LMS</namespace>
	
	<entity name="LibraryStore" local-service="true" remote-service="false">
		<column type="long" name="lmsID" primary="true"/>
		<column type="String" name="bookname" />
		<column type="String" name="issueDate" />
		<column type="String" name="uploadedBy" />
		<column type="String" name="issueTo" />
		
		<!-- forign key -->
		<column type="long" name="groupId" />
		<column type="long" name="comapnyId" />
		<column type="long" name="userId" />
		
		<order by="desc">
			<order-column name="issueDate"/>
		</order>
		
		<finder return-type="LibraryStore" name="Bookname">
				<finder-column name="bookname" />
				<finder-column name="groupId" />
		</finder>
		
		<finder return-type="Collection" name="IssueDate">
				<finder-column name="issueDate" />
				<finder-column name="groupId" />
		</finder>
		
		<reference entity="BlogsEntry" package-path="com.liferay.blogs"/>
		
	</entity>
	
	
	<exceptions>
		<exception>NoBookAssignException</exception>
	
	</exceptions>
	
</service-builder>